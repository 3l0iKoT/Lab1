<Window x:Class="labinterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labinterface"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Lab1" Height="700" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="500" />
        </Grid.ColumnDefinitions>
        <oxy:PlotView Width="1000" 
                      HorizontalAlignment="Left" 
                      x:Name="plotView" 
                      Background="#525252" 
                      Grid.Column="0" 
                      Grid.ColumnSpan="2"/>
        <Grid Grid.Column="1" 
              Width="200" 
              HorizontalAlignment="Right" 
              Background="#525259">
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                <Button x:Name="Approximation"
                        Content="Click Me!"
                        Click="DrawApproximation"
                        Height="50"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0" />
                <ComboBox x:Name="MyComboBox"
                          Height="50"
                          BorderThickness="0" >
                    <ComboBoxItem Content="Option 1" />
                    <ComboBoxItem Content="Option 2" />
                    <ComboBoxItem Content="Option 3" />
                </ComboBox>
                <TextBox x:Name="FirstParam"
                         Height="50"
                         BorderThickness="0"
                         Text="First Param" />
                <TextBox x:Name="SecondParam"
                         Height="50"
                         BorderThickness="0"
                         Text="Second Param" />
                <Button x:Name="MakeIt"
                        Content="Click Me!"
                        Click="DrawGraphic"
                        Height="50"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
